{% extends "::layout.html.twig" %}
{% block container %}
    {{ parent() }}
    {{ text }}
    {#
      Thi is a comment
      <h1>Hello</h1>
    #}
    <hr/>
    {{ fruits.pear }}

    {% if fruits.pear starts with "f" %}
        {{ fruits.apple }}
    {% endif %}

    <hr/>
    {% set variable = "Hello Twig" %}
    {{ variable }}

    <hr/>
    {% if products | length > 0 %}
        <ul>
            {% for product in products %}
                <li>
                    {{ product.product}}
                    -
                    {{product.price}}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <hr/>
    {% set fecha = date("-2 days", "Europe/Madrid") %}
    {{ dump(fecha) }}

    <hr/>
    {{include('AppBundle:tests:partial.html.twig')}}
    {{ min([76,99,58]) }}
    <hr/>
    {{ random(["Batman", "Captain America", "Spiderman"]) }}
    <hr/>
    {% for i in range(0, 25, 3) %}
        {{i}}<br/>
    {% endfor %}
    <hr/>
    {{ generateTable(products)|raw }}
{% endblock %}
